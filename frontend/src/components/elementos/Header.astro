<header class="header">
  <a href="/">
    <h1>NoneNotes</h1>
  </a>
</header>

<style>
  .header {
    background: var(--pantone-bg); /* Fondo principal */
    color: var(--pantone-text); /* Texto */
    display: flex;
    align-items: center;
  }

  a {
    text-decoration: none;
  }

  .header h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--pantone-primary); /* Color del título */
    letter-spacing: 2px;
    margin: 0;
  }

  /* Animación suave al cargar */
  .header h1 {
    opacity: 0;
    transform: translateY(-10px);
    animation: fadeIn 1s ease-out forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
