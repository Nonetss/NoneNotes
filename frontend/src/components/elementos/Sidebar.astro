---
export interface SidebarProps {
  links: { name: string; href: string; icon?: string }[];
}
const { links } = Astro.props;
---

<aside class="sidebar">
  <nav class="nav">
    <ul>
      {
        links.map((link) => (
          <li>
            <a href={link.href}>
              {link.icon && <span class="icon">{link.icon}</span>}
              <span class="text">{link.name}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>

<style>
  /* Sidebar container */
  .sidebar {
    top: 0;
    left: 0;
    height: 99vh;
    background: var(--color-box);
    color: var(--text);
    border: 3px solid #000;
    box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 0.9); /* sombra definida */
    display: flex;
    flex-direction: column;
  }

  /* Navigation */
  .nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav li {
    margin-bottom: 20px;
  }

  .nav a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--text);
    padding: 10px 8px;
    transition:
      background 0.3s ease,
      transform 0.2s ease;
  }

  .nav a:hover {
    background: var(--color-accent);
    color: var(--bg);
  }

  .icon {
    font-size: 1.5rem;
    margin-right: 10px;
  }

  .text {
    font-size: 1.2rem;
  }
</style>
