---
import Header from "@components/elementos/Header.astro";
import Sidebar from "@components/elementos/Sidebar.astro";
import "@/styles/global.css";

const links = [
  { name: "Notas", href: "/notas", icon: "üìö" },
  { name: "Calendario", href: "/calendario", icon: "üìÖ" },
  { name: "Recordatorios", href: "/recordatorios", icon: "‚è∞" },
  { name: "Extras", href: "/extras", icon: "‚ú®" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio</title>
  </head>
  <body>
    <!-- Observa c√≥mo ahora simplemente usaremos la clase 'collapsed' en el HTML -->
    <div
      class={`parent ${
        // Aunque aqu√≠ se mantiene el check, la clase ya existe si localStorage nos dice que s√≠.
        typeof window !== "undefined" &&
        localStorage.getItem("sidebar-collapsed") === "true"
          ? "collapsed"
          : ""
      }`}
      id="grid-container"
    >
      <div class="sidebar" id="sidebar">
        <Sidebar links={links} />
      </div>
      <div class="header">
        <button
          class="toggle-button"
          id="toggle-button"
          aria-label="Toggle Sidebar"
        >
          <span class="arrow">‚ûú</span>
        </button>
        <Header />
      </div>
      <div class="main">
        <slot />
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const toggleButton = document.getElementById("toggle-button");
        const gridContainer = document.getElementById("grid-container");
        const sidebar = document.getElementById("sidebar");

        // Inicializar el estado de la sidebar con la clase ya puesta en <html>
        // (aunque no es estrictamente necesario, lo mantenemos por compatibilidad).
        try {
          const isCollapsed =
            localStorage.getItem("sidebar-collapsed") === "true";
          if (isCollapsed) {
            gridContainer.classList.add("collapsed");
            sidebar.classList.add("collapsed");
          }
        } catch (e) {
          console.error("Error al leer el estado de la sidebar:", e);
        }

        toggleButton.addEventListener("click", () => {
          gridContainer.classList.toggle("collapsed");
          sidebar.classList.toggle("collapsed");
          // Guardar el estado en localStorage
          try {
            const isCollapsed = gridContainer.classList.contains("collapsed");
            localStorage.setItem("sidebar-collapsed", isCollapsed);
          } catch (e) {
            console.error("Error al guardar el estado de la sidebar:", e);
          }
        });
      });
    </script>
  </body>
</html>
